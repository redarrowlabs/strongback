{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es3",
        "moduleResolution": "node",
        "baseUrl": "src",
        "outDir": "bin",
        "jsx": "react",
        "declaration": true,
        "pretty": true,
        "sourceMap": true,

        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": false,
        "strictNullChecks": true,
        "lib": [
            "es5",
            "dom",
            "es2015"
        ]
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "bin"
    ]
}